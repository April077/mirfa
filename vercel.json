{
  "version": 3,
  "projects": {
    "web": {
      "rootDirectory": "apps/web"
    },
    "api": {
      "rootDirectory": "apps/api"
    }
  },
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "apps/api/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/apps/api/$1.ts" },
    { "src": "/(.*)", "dest": "/apps/web/$1" }
  ]
}
